<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bridgette" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styleTitre">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styleSSTitre">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CnxClubButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:backgroundTint">@color/colorBigButton</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:startColor">#547345</item>>
        <item name="android:endColor">#27590c</item>
    </style>
    <style name="RazCnxClubButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>

        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="BigButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:backgroundTint">@color/colorBigButton</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:shape">rectangle</item>
        <item name="android:startColor">#547345</item>>
        <item name="android:endColor">#27590c</item>
    </style>

    <style name="SmallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:backgroundTint">@color/colorBigButton</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:shape">rectangle</item>
        <item name="android:gradientRadius">8dp</item>
        <item name="android:startColor">#547345</item>>
        <item name="android:endColor">#27590c</item>
    </style>

    <style name="txtBigButton">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="txtSmallButton">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.Bridgette.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bridgette.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bridgette.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>